from google import genai
from dotenv import load_dotenv
import os
# used to check if the modules are installed and which models are available for my system 


# Load environment variables from .env file (or api.env.txt as fallback)
load_dotenv()  # Try .env first
if not os.getenv("GEMINI_API_KEY"):
    load_dotenv("api.env.txt")  # Fallback to api.env.txt

# Get API key from environment variable
api_key = os.getenv("GEMINI_API_KEY")
if not api_key:
    raise ValueError("GEMINI_API_KEY environment variable is not set. Please create a .env file or ensure api.env.txt exists.")

client = genai.Client(api_key=api_key)

models = client.models.list()

found = False
for m in models:
    print(m.name)
    found = True

if not found:
    print("‚ùå No models returned for this API key")
